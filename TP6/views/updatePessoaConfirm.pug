extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Person Record Updated: #{p.nome}
        
    .w3-container
        img.w3-left.w3-circle(src="/images/student.png" alt="Avatar" width="100")
        ul.w3-ul.w3-card-4
            li #[b Nome:] #{p.nome}
            li #[b Idade:] #{p.idade}
            li #[b Sexo:] #{p.sexo}
            li #[b Morada:]
              ul
                li #[b Distrito:] #{p.morada.distrito}
                li #[b Cidade:] #{p.morada.cidade}
            if p.BI
              li #[b BI:] #{p.BI}
            else
              li #[b CC:] #{p.CC}
            if p['descrição']
              li #[b Descrição:] #{p['descrição']}
            li #[b Profissão:] #{p.profissao}
            li #[b Partido Politico:]
              ul
                li #[b Sigla:] #{p.partido_politico.party_abbr}
                li #[b Nome:] #{p.partido_politico.party_name}
            if p.religiao
              li #[b Religiao:] #{p.religiao}
            li #[b Desportos] #{p.desportos}
            li #[b Animais] #{p.animais}
            li #[b Figura Publica Preferida] #{p.figura_publica_pt}
            li #[b Marca de Carro Preferida] #{p.marca_carro}
            li #[b Destinos Favoritos] #{p.destinos_favoritos}
            li #[b Atributos:]
              ul
                if p.atributos.fumador
                  li Fumador
                if p.atributos.gosta_cinema
                  li Gosta de cinema
                if p.atributos.gosta_viajar
                  li Gosta de viajar
                if p.atributos.gosta_ler
                  li Gosta de ler 
                if p.atributos.gosta_musica
                  li Gosta de musica
                if p.atributos.gosta_comer
                  li Gosta de comer
                if p.atributos.gosta_animais_estimacao
                  li Gosta de animais de estimacao
                if p.atributos.gosta_dancar 
                  li Gosta de dançar
                li #[b Comida Favorita:] #{p.atributos.comida_favorita} 

    footer.w3-container.w3-teal 
      h5 Generated by RPCW2023 in #{d} - #[a(href="/") Return]






