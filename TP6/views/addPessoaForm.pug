extends layout 
block content 

    .w3-card-4
        header.w3-container.w3-purple
            h2 Person Form
        form.w3-container(method="POST")
            fieldset
                legend Metadata
                label Nome
                input.w3-input.w3-round(type="text" name="nome")
                fieldset
                    legend Sexo
                    input(type="radio" id="masculino" name="sexo" value="Masculino")
                    label(for="masculino") Masculino
                    input(type="radio" id="feminino" name="sexo" value="Feminino")
                    label(for="feminino") Feminino
                    input(type="radio" id="outro" name="sexo" value="Outro")
                    label(for="outro") Outro
                label Idade
                input.w3-input.w3-round(type="text" name="idade")
                fieldset
                    legend Morada
                    label Distrito
                    input.w3-input.w3-round(type="text" name="morada.distrito")
                    label Cidade
                    input.w3-input.w3-round(type="text" name="morada.cidade")
                label BI/CC
                input.w3-input.w3-round(type="text" name="BI")
                label Profissão
                input.w3-input.w3-round(type="text" name="profissao")
                fieldset
                    legend Partido Politico
                    label Sigla
                    input.w3-input.w3-round(type="text" name="partido_politico.party_abbr")
                    label Nome
                    input.w3-input.w3-round(type="text" name="partido_politico.party_name")
                label Religiao
                input.w3-input.w3-round(type="text" name="religiao")
                label Desportos
                input.w3-input.w3-round(type="text" name="desportos")
                label Animais
                input.w3-input.w3-round(type="text" name="animais")
                label Figura Publica Preferida
                input.w3-input.w3-round(type="text" name="figura_publica_pt")
                label Marca de Carro
                input.w3-input.w3-round(type="text" name="marca_carro")
                label Destinos Favoritos
                input.w3-input.w3-round(type="text" name="destinos_favoritos")
                fieldset
                    legend Atributos
                    input.w3-check(type="checkbox" name="atributos.fumador" value="1")
                    label Fumador
                    br
                    input.w3-check(type="checkbox" name="atributos.gosta_cinema" value="1")
                    label Gosta de cinema
                    br
                    input.w3-check(type="checkbox" name="atributos.gosta_viajar" value="1")
                    label Gosta de viajar
                    br
                    input.w3-check(type="checkbox" name="atributos.acorda_cedo" value="1")
                    label Acorda cedo
                    br
                    input.w3-check(type="checkbox" name="atributos.gosta_ler" value="1")
                    label Gosta de ler
                    br
                    input.w3-check(type="checkbox" name="atributos.gosta_musica" value="1")
                    label Gosta de musica
                    br
                    input.w3-check(type="checkbox" name="atributos.gosta_comer" value="1")
                    label Gosta de comer
                    br
                    input.w3-check(type="checkbox" name="atributos.gosta_animais_estimacao" value="1")
                    label Gosta de animais de estimação
                    br
                    input.w3-check(type="checkbox" name="atributos.gosta_dancar" value="1")
                    label Gosta de dançar
                    br
                    label Comida favorita
                    input.w3-input.w3-round(type="text" name="atributos.comida_favorita")
                        
                    
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Add
               
        footer.w3-container.w3-purple
            h5 Generated by RPCW2023 in #{d} - [#[a(href="/") Return]]