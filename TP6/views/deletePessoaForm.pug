extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Student Record Delete: #{p.nome}
        
    .w3-container
        img.w3-left.w3-circle(src="/images/student.png" alt="Avatar" width="100")
        ul.w3-ul.w3-card-4
            li #[b Nome:] #{p.nome}
            li #[b Idade:] #{p.idade}
            li #[b Sexo:] #{p.sexo}

        button.w3-btn.w3-round.w3-margin.w3-green
            a(href="/pessoas/delete/" + p._id + "/confirm") Confirm 
        button.w3-btn.w3-round.w3-margin.w3-red
            a(href="/") Cancel
    footer.w3-container.w3-teal 
      h5 Generated by RPCW2023 in #{d} - #[a(href="/") Return]



