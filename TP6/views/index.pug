extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Lista de Pessoas #[a.w3-btn.w3-round.w3-grey(href="/pessoas/registo") + ]
    .w3-container
      table.w3-table-all
        tr
          th Name
          th Idade
          th Sexo
          th Ações
        
        each s in plist
          tr
            td
              a(href="/pessoas/"+s._id)= s.nome
            td= s.idade
            td= s.sexo
            td
              button.w3-btn.w3-round.w3-indigo.w3-margin-right 
                a(href="/pessoas/edit/"+s._id) Edit
              button.w3-btn.w3-round.w3-indigo.w3-margin-right  
                a(href="/pessoas/delete/"+s._id) Delete
              
    footer.w3-container.w3-teal
      h5 Generated by RPCW2023 in #{d}
    